{{#if addNewCategory}}
  <h1>New Category</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Title</label>
          {{input value=title id="title"}}
        </div>

        <button {{action 'saveCategory'}}>Save</button>
      </form>
    </div>
{{else}}
  <button class="btn btn-info" {{action 'categoryFormShow'}}>New City</button>
{{/if}}
